{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "DCName": {
      "type": "string",
      "minLength": 1
    },
    "DomainName": {
      "type": "string",
      "minLength": 1
    },
    "DCAdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "DCAdminPassword": {
      "type": "securestring"
    },
    "DCWindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "2016-Datacenter"
      ]
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "Auto-generated container in staging storage account to receive post-build staging folder upload"
      }
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "Auto-generated token to access _artifactsLocation"
      }
    },
    "pubipDnsName": {
      "type": "string",
      "minLength": 1
    }},
  "variables": {
    "storageName": "[concat('storage', uniqueString(resourceGroup().id))]",
    "NetworkPrefix": "10.0.0.0/16",
    "NetworkSubnet1Name": "Subnet-1",
    "NetworkSubnet1Prefix": "10.0.0.0/24",
    "NetworkSubnet2Name": "Subnet-2",
    "NetworkSubnet2Prefix": "10.0.1.0/24",
    "DCImagePublisher": "MicrosoftWindowsServer",
    "DCImageOffer": "WindowsServer",
    "DCOSDiskName": "DCOSDisk",
    "DCVmSize": "Standard_D2_v2",
    "DCVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'Network')]",
    "DCSubnetRef": "[concat(variables('DCVnetID'), '/subnets/', variables('NetworkSubnet1Name'))]",
    "DCStorageAccountContainerName": "vhds",
    "DCNicName": "[concat(parameters('DCName'), 'NetworkInterface')]",
    "DomainArchiveFolder": "DSC",
    "DomainArchiveFileName": "Domain.zip",
    "pubipName": "pubip"},
  "resources": [
    {
      "name": "[variables('storageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('storageType')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "storage"
      },
      "kind": "Storage"
    },
    {
      "name": "Network",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [ ],
      "tags": {
        "displayName": "Network"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('NetworkPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('NetworkSubnet1Name')]",
            "properties": {
              "addressPrefix": "[variables('NetworkSubnet1Prefix')]"
            }
          },
          {
            "name": "[variables('NetworkSubnet2Name')]",
            "properties": {
              "addressPrefix": "[variables('NetworkSubnet2Prefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('DCNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', 'Network')]",
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('pubipName'))]"
      ],
      "tags": {
        "displayName": "DCNic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('DCSubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('pubipName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('DCName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('DCNicName'))]"
      ],
      "tags": {
        "displayName": "DC"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('DCVmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('DCName')]",
          "adminUsername": "[parameters('DCAdminUsername')]",
          "adminPassword": "[parameters('DCAdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('DCImagePublisher')]",
            "offer": "[variables('DCImageOffer')]",
            "sku": "[parameters('DCWindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "DCOSDisk",
            "vhd": {
              "uri": "[concat(reference(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')), '2016-01-01').primaryEndpoints.blob, variables('DCStorageAccountContainerName'), '/', variables('DCOSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('DCNicName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "Microsoft.Powershell.DSC",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2016-03-30",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', parameters('DCName'))]"
          ],
          "tags": {
            "displayName": "Domain"
          },
          "properties": {
            "publisher": "Microsoft.Powershell",
            "type": "DSC",
            "typeHandlerVersion": "2.9",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "properties": {
                "DomainName": "[parameters('DomainName')]",
                "AdminCreds": {
                  "UserName": "[parameters('DCAdminUserName')]",
                  "Password": "PrivateSettingsRef:AdminPassword"
                }
              },
              "configuration": {
                "url": "[concat(parameters('_artifactsLocation'), '/', variables('DomainArchiveFolder'), '/', variables('DomainArchiveFileName'))]",
                "script": "Domain.ps1",
                "function": "CreateADPDC"
              },
              "configurationArguments": {
                "nodeName": "[parameters('DCName')]"
              }
            },
            "protectedSettings": {
              "Items": {
                "configurationUrlSasToken": "[parameters('_artifactsLocationSasToken')]",
                "AdminPassword": "[parameters('DCAdminPassword')]"
              }
            }
          }
        }
      ]
    },
    {
      "name": "[variables('pubipName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [ ],
      "tags": {
        "displayName": "pubip"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[parameters('pubipDnsName')]"
        }
      }
    }],
  "outputs": {}
}
